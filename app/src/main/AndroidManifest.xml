<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chat.matheus.chatnotification">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.chat.matheus.chatnotification.activities.ChatsActivity" />
        <activity android:name="com.chat.matheus.chatnotification.activities.MessageActivity" />
        <activity android:name="com.chat.matheus.chatnotification.activities.UserActivity" />
        <activity android:name="com.chat.matheus.chatnotification.activities.AddChatActivity" />
        <activity android:name="com.chat.matheus.chatnotification.activities.AddUserActivity" />

        <meta-data
            android:name="android.support.VERSION"
            android:value="26.1.0" />
        <meta-data
            android:name="android.arch.lifecycle.VERSION"
            android:value="27.0.0-SNAPSHOT" />

    </application>

</manifest>